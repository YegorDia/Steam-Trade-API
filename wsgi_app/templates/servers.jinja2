{% extends "layout.jinja2" %}

{% block meta %}
    <title>Steam Trade API Panel / Servers</title>
    <meta name="author" content="YD">
{% endblock %}

{% include "header.jinja2" %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Server name</th>
                <th>Server HOST:Port</th>
            </tr>
            {% for server in servers %}
                <tr><td><a href="/servers/{{ server._id }}">{{ server.name }} </a></td><td>{{ server.host }}:{{ server.port }}</td></tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="jumbotron">
        <h2>Add New Server</h2>
        <form method="POST" action="/servers/add">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Name">
          </div>
          <div class="form-group">
            <label for="host">Host</label>
            <input type="text" class="form-control" id="host" name="host" placeholder="Host">
          </div>
          <div class="form-group">
            <label for="port">Port (optional)</label>
            <input type="text" class="form-control" id="port" name="port" placeholder="Port">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
{% endblock %}